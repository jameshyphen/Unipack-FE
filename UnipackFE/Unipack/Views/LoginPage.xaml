<Page
    x:Class="Unipack.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unipack.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="170" Width="452">

    <Grid>
        <TextBox x:Name="TxtUsername" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,10,0,0" Text="&#xD;&#xA;" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="430" FontSize="24" PlaceholderText="Username"/>
        <PasswordBox x:Name="PsbPassword" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Height="42" Width="430" FontSize="24" PlaceholderText="Password"/>
        <TextBlock x:Name="TxtUsernameValidation" HorizontalAlignment="Left" Margin="11,57,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFCB0000"/>
        <TextBlock x:Name="TxtPasswordValidation" HorizontalAlignment="Left" Margin="11,132,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFCB0000"/>
    </Grid>
</Page>
